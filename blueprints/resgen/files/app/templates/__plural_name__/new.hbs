<div class="new">
  <h2 class="title">{{t 'New <%= entityName %>'}}</h2>
  <div class="actions">
    <button type="button" class="btn save" title="Save new <%= entityName %>" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      <%= attributes.map( function(property) {
          if(property.kind == "lang-string-set") {
            return "<tr>\n" +
              "  <td>{{t '" + property.name + "'}}</td>\n" +
              "  <td align='middle'>{{edit-attribute-string-set model=model attribute='" + property.name + "' lang=true tagName='ul' classes='string-set'}}</td>\n" +
              "</tr>";
          }
          else if(property.kind == "string-set") {
            return "<tr>\n" +
              "  <td>{{t '" + property.name + "'}}</td>\n" +
              "  <td align='middle'>{{edit-attribute-string-set model=model attribute='" + property.name + "' tagName='ul' classes='string-set'}}</td>\n" +
              "</tr>";
          }
          else if(property.kind == "boolean") {
            return "<tr>\n" +
              "  <td>{{t '" + property.name + "'}}</td>\n" +
              "  <td>{{edit-boolean-attribute model=model attribute='" + property.name + "' classes='checkbox'}}</td>\n" +
              "</tr>";
          }
          else {
            return "<tr><td>" + property.name + "</td><td align='middle'>{{handle-attribute model=model attribute='" + property.name + "' editable=true}}</td></tr>";
          }
        }).join("\n") %>
      <%=
        belongsToRelationships.map( function(relationship) {
          return "<tr><td>" + relationship.name + "</td><td align='middle'>{{edit-belongs-to relName=model."+relationship.name+" relType=\""+relationship.relType+"\"}}</td></tr>";
        }).join("\n      ")
      %>
      <%=
        hasManyRelationships.map( function(relationship) {
          return "<tr><td>" + relationship.name + "</td><td align='middle'>{{edit-has-many relName=model."+relationship.name+" relType=\""+relationship.relType+"\"}}</td></tr>";
        }).join("\n      ")
      %>
    </tbody>
  </table>
</div>
