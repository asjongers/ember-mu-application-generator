<div class="new">
  <h2 class="title">{{t 'New <%= entityName %>'}}</h2>
  <div class="actions">
    <button type="button" class="btn save" title="Save new <%= entityName %>" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      <%=
        // this currently only understands regular inputs
        attributes.map( function(attribute) {
          return "<tr><td>" + attribute.name + "</td><td align='middle'>{{input value=model." + attribute.itemVar +" placeholder=attribute.name}}</td></tr>";
        }).join("\n  ")
      %>

      <%=
       relationships.map( function(relationship) {
         console.log(relationship);
         return "<tr>" +
   			  '  <td class="properties__label">{{t \'' +  relationship.itemVar + '\'}}</td>' +
   				"\n" + '  {{display-model-relationship model=model.' + relationship.itemVar + ' kind=\''+ relationship.kind + '\' itemRoute=\'' + relationship.itemRoute  + '\' relationRoute=\'' + relationship.itemListRoute + '\' relationFilterKey=\'' + entityName + '\' relationFilterValue=model.id configuredLabel=\'id\'}}' + "\n" +
           '</tr>';
       } ).join("\n")
       %>
    </tbody>
  </table>
</div>
