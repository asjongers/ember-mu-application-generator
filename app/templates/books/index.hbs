<div class="content">
  <h2 class="title">{{t 'books'}}</h2>
  {{#unless }}
    <div class="actions">
      {{#link-to "books.new" class="btn new" title="Create new item" tagName='button' }}Create{{/link-to}}
    </div>
  {{/unless}}
  {{#if model}}
    <table>
      <thead>
        {{display-book-attributes-header model=model}}
      </thead>
      <tbody>
        {{#each model as |item|}}
          {{display-book-attributes-row model=item}}
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="empty">
      No {{t 'books'}} in the database.
      {{#unless }} Click on the <i class="fa fa-plus" aria-hidden="true"></i> button to create a new {{t 'book'}}.
      {{/unless}}
    </div>
  {{/if}}
</div>
