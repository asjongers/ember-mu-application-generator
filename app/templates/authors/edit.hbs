<div class="edit">
  <h2 class="title">{{t 'Edit author'}}</h2>
  <div class="actions">
    <button type="button" class="btn save" title="Save new author" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
    <button type="button" class="btn delete" title="Delete this item" {{action 'delete' model}}>Delete</button>
  </div>
  <table>
    <thead>
      <tr>
        <th>Property</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      <tr><td>name</td><td align='middle'>{{handle-attribute model=model attribute='name' editable=true}}</td></tr>
        
        <tr><td>books</td><td align='middle'>{{edit-has-many relName=model.books relType="book"}}</td></tr>

    </tbody>
  </table>
</div>


