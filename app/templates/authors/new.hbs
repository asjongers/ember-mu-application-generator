<div class="new">
  <h2 class="title">{{t 'New author'}}</h2>
  <div class="actions">
    <button type="button" class="btn save" title="Save new author" {{action 'save' model}}></button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}></button>
  </div>
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      <tr><td>name</td><td align='middle'>{{input value=model.name placeholder=attribute.name}}</td></tr>
  <tr><td>book</td><td align='middle'>{{input value=model.book placeholder=attribute.name}}</td></tr>
    </tbody>
  </table>
</div>
