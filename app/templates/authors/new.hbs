{{!-- Page to create a new author --}}
<div class="new">
  <h2 class="title">{{t 'New author'}}</h2>

  {{!--
    Actions to save new author
    or delete new author.
  --}}
  <div class="actions">
    <button type="button" class="btn save" title="Save new author" {{action 'save' model}}>Save</button>
    <button type="button" class="btn cancel" title="Cancel" {{action 'cancel' model}}>Cancel</button>
  </div>

  {{!-- Table to show details of author. --}}
  <table>
    <thead>
      <tr>
        <th>Attribute</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>name</td>
<td align='middle'>{{handle-attribute model=model attribute='name' editable=true}}</td>
      </tr>
      
      <tr><td>book</td><td align='middle'>{{edit-has-many relName=model.book relType="book"}}</td></tr>
    </tbody>
  </table>
</div>
