{{!-- Page to list authors --}}
<div class="content">
  <h2 class="title">{{t 'authors'}}</h2>
  <div class="actions">{{#link-to "authors.new" class="btn new" title="Create new item" tagName="button" }}Create{{/link-to}}</div>
  {{#if model}}
    <table>
      <thead>
        <tr>
          <th class="properties__label">id</th>
          {{sortable-table-header attribute="name" currentSort=sort}}

          
          {{sortable-table-header attribute="books" currentSort=sort}}
{{sortable-table-header attribute="mainBooks" currentSort=sort}}
        </tr>
      </thead>
      <tbody>
        {{#each model as |item|}}
          {{#link-to "authors.show" item tagName='tr' }}
              <td>{{handle-attribute model=item attribute='id' classes='properties__data'}}</td>
            {{handle-attribute model=item attribute='name' tagName='td' classes='properties__data'}}

            {{display-model-hasmany-relationship   model=item.books tagName='td' itemRoute='books.show' configuredLabel='stringRep'}}
            {{display-model-hasmany-relationship   model=item.mainBooks tagName='td' itemRoute='books.show' configuredLabel='stringRep'}}
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>

    {{#if model.meta.pagination}}
      {{pagination-component page=page numberOfItems=model.length total=model.meta.count links=model.meta.pagination}}
    {{/if}}
  {{else}}
    <div class="empty">
      No {{t 'authors'}} in the database.
      Click on the <i class="fa fa-plus" aria-hidden="true"></i> button to create a new {{t "author"}}.
    </div>
  {{/if}}
</div>
