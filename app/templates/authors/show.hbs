{{!-- Page to show details of authors --}}
<div class="details">
  <h2 class="title">{{t 'author details'}}</h2>

  {{!--
    Actions to go back to the list-view or edit author
    if it's an editable application.
  --}}
  <div class="actions">
    {{#link-to "authors" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#unless }}
      {{#link-to "authors.edit" model class="btn edit" title="Edit this item" tagName='button'}}Edit{{/link-to}}
    {{/unless}}
  </div>

  {{!-- Table to show details of author. --}}
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      {{!-- Creating row for id --}}
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      {{!-- Creating rows for attributes depending on the type of property --}}
            <tr>
        <td>{{t 'name'}}</td>
        {{handle-attribute model=model attribute='name' tagName='td' classes='properties__data'}}
      </tr>

      <tr>
        <td class="properties__label">{{t 'book'}}</td>
        <td>{{display-model-relationship model=model.book kind='has-many' itemRoute='books.show' relationRoute='books.index' relationFilterKey='author' relationFilterValue=model.id configuredLabel='stringRep'}}</td>
      </tr>
    </tbody>
  </table>
</div>
