<div class="details">
  <h2 class="title">{{t 'author details'}}</h2>
  <div class="actions">
    {{#link-to "authors" class="btn back" title="Return to list" tagName='button'}}Return to the list{{/link-to}}
    {{#unless }}
      {{#link-to "authors.edit" model class="btn edit" title="Edit this item" tagName='button'}}Edit{{/link-to}}
    {{/unless}}
  </div>
  <table>
    <thead>
      <tr>
        <th>{{t "Attribute"}}</th>
        <th>{{t "Data"}}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="properties__label">{{t "id"}}</td>
        {{handle-attribute model=model attribute='id' tagName='td' classes='properties__data'}}
      </tr>
      <tr>
        <td class="properties__label">{{t 'name'}}</td>
        <td>{{handle-attribute model=model attribute='name' tagName='td' classes='properties__data'}}</td>
      </tr>

      <tr>
        <td class="properties__label">{{t 'books'}}</td>
        <td>{{display-model-relationship model=model.books kind='has-many' itemRoute='books.show' relationRoute='books.index' relationFilterKey='author' relationFilterValue=model.id configuredLabel='stringRep'}}</td>
      </tr>
    </tbody>
  </table>
</div>
